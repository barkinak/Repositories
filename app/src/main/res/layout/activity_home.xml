<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.HomeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/repo_list_toolbar"
        android:background="@color/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:titleTextColor="@android:color/white"
        android:theme="@style/AppTheme">
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/search_field"
        android:background="@color/search_field"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <EditText
            android:id="@+id/repo_text_field"
            android:background="@drawable/rounded_edit_text"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:padding="7dp"
            android:inputType="text"
            android:textSize="12sp"
            android:hint="@string/search_field_hint"/>

        <Button
            android:id="@+id/submit_button"
            android:background="@drawable/rounded_button_bg"
            android:layout_toRightOf="@+id/repo_text_field"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:text="@string/submit_button"
            android:textSize="12sp"
            android:textColor="@color/search_field"/>
    </RelativeLayout>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/my_nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        app:navGraph="@navigation/nav_graph"
        app:defaultNavHost="true"/>

    <ListView
        android:id="@+id/repo_list"
        android:layout_below="@+id/search_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>